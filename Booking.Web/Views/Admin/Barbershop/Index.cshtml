@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Index";
}

@using Booking.Web.Models
@using Booking.Web.Models.Admin
@using Booking.Web.Controllers
@model List<BarbershopManager>

@using (Html.BeginForm("AddBarbershop", "Barbershop", FormMethod.Post, new { autocomplete = "off" }))
{
    <div class="form-group">
        <div style="width: 20.75vw; position: absolute; right: 50%; top: 12%; ">
            <label for="username1" style="font-weight: bold; display: block; font-size: 2.5vb; margin-bottom: 0.2em;">Barbershop Name</label>
            <input type="text" class="form-control" name="Name"
                   id="username1" placeholder="Enter Name"
                   style="border-radius: 10px; font-family: Arial; font-size: 2.5vb; ">
        </div>
    </div>

    <div class="form-group">
        <div style="width: 20.75vw; position: absolute; right:50%; top: 22%; ">
            <label for="username2" style="font-weight: bold; display: block; font-size: 2.5vb; margin-bottom: 3px;">Barbershop Address</label>
            <input type="text" class="form-control" name="Address"
                   id="username2" placeholder="Enter Address"
                   style="border-radius: 10px; font-family: Arial; font-size: 2.5vb;">
        </div>
    </div>

    <div class="form-group">
        <div style=" position: absolute; right:50.25%; top: 36%; ">
            <button class="btn btn-lg btn-dark" id="addBarber" style="background-color: black; color: white;
	                            border-radius: 0.5em; width: 20.5vw; height: 5.2vh; font-size: 2.5vb;">
                Add Barbershop
            </button>
        </div>
    </div>
}

<div class="table-responsive" style=" position: absolute; right:31%; top:48%; width: 40vw;">
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th style="width: 8vw"> </th>
                <th style="width: 8vw"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var barbershop in Model)
            {
                <tr>
                    @using (Html.BeginForm("UpdateBarbershop", "Barbershop", FormMethod.Post))
                    {
                        <td>
                            <input type="hidden" name="Id" value="@barbershop.Id" />
                            <input type="text" class="no-outline"
                                   placeholder="BarberShop Name" name="Name"
                                   value="@barbershop.Name" />
                        </td>

                        <td>
                            <input type="text" class="no-outline"
                                   placeholder="BarberShop Address" name="Address"
                                   value="@barbershop.Address" />
                        </td>

                        <td>
                            <button class="btn btn-lg btn-dark" id="Update" style="background-color: black; color: white;
                                    border-radius: 5px; width: 5.5vw; height: 3.5vh; font-size: 1.8vb; display: flex; justify-content: center; align-items: center;">
                                Save
                            </button>

                        </td>
                    }
                <td>
                    <form action="@Url.Action("DeleteBarbershop", "Barbershop", new { id = barbershop.Id })" method="post">
                        <button class="btn btn-lg btn-dark" id="Delete" style="background-color: black; color: white;
                                border-radius: 5px; width: 5.5vw; height: 3.5vh; font-size: 1.8vb; display: flex; justify-content: center; align-items: center;">
                            Delete
                        </button>
                    </form>
                </td>

                </tr>
            }
        </tbody>

    </table>
</div>

